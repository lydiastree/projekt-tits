@model KsiazkaKucharska.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>Twoje konto</h2>


<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Zmień ustawienia swojego konta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Hasło:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Zmień hasło", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
        <dt>Twoje przepisy:</dt>
        <dd>
            
            @*@Model.Logins.Count*@ [
            @Html.ActionLink("Przeglądaj swoje przepisy", "ManageLogins") ]
        </dd>
    </dl>
</div>
